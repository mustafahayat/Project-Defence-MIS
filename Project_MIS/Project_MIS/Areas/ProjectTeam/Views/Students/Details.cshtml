@model Project_MIS.Models.Student

@{
    ViewData["Title"] = "Details";
}

<br />
<br />

<div class="card">
    <div class="card-body bg-white">

        <div class="col text-info">
            <h1>Details info of  @Model.Name @Model.LastName Profile</h1><hr />
        </div>
        <br />
        <div class="row">
            <div class="col-9">
                    <div class="form-group">
                        <label asp-for="FacultyId" class="control-label"></label>
                        <select disabled="disabled" asp-for="FacultyId" class="form-control custom-select" asp-items="ViewBag.FacultyId"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label"></label>
                        <select disabled="disabled" asp-for="DepartmentId" class="form-control custom-select" asp-items="ViewBag.DepartmentId"></select>
                    </div>
                
                
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select disabled="disabled" asp-for="ProjectId" class="form-control custom-select" asp-items="ViewBag.ProjectId"></select>
                </div>
                    
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <select disabled="disabled" asp-for="Role" class="form-control custom-select" asp-items="Html.GetEnumSelectList<Role>()"></select>
                </div>

                <div class="form-group">
                        <label asp-for="RollNo" class="control-label"></label>
                        <input readonly="readonly" asp-for="RollNo" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input readonly="readonly" asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input readonly="readonly" asp-for="LastName" class="form-control" />
                    </div>
                

                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select disabled="disabled" asp-for="Gender" class="form-control custom-select" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input disabled="disabled" asp-for="Email" class="form-control" />
                    </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input readonly="readonly" asp-for="Phone" class="form-control" />
                </div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><span class="fa fa-edit"></span>&nbsp;</a> |
                <a asp-action="Index" class="btn btn-info"><span class="fa fa-arrow-alt-circle-left"> &nbsp;</span> Back to List</a>

            </div>
            <div class="col-2 offset-1">
                <img src="@Model.Image" class="card-img" />
            </div>
        </div>

    </div>
    
</div>


