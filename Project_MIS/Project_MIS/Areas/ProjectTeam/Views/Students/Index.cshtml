@model IEnumerable<Project_MIS.Models.Student>

@{
    ViewData["Title"] = "Index";
}


<br />
<br />
<div class="card bg-white">
    <div class="card-body bg-white">
        <div class="row align-baseline">
            <div class="col text-info">
                <h1>List of Students</h1><hr />
            </div>
            <div class="col text-right">
                <a asp-action="Create" class="btn btn-success"> <span class="fa fa-plus"></span>  &nbsp; New Student</a>
            </div>
        </div>



        @if (Model.Any())
        {

            @* past the table Data *@
            <table id="students" class="table table-striped table-hover" style="width: 100%">
                <thead class="table-secondary">
                    <tr>
                        
                        <th>
                            Full_Name
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model=>model.ProjectId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model=>model.Role)

                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)

                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Project.Name)
                        </td>
                        <td>
                             @(item.Role.ToString() == "ProjectLeader" ? item.Role + "*" : item.Role.ToString()) 
                             
                            
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <img src="@item.Image" width="50px" height="50px" />
                        </td>
                        <td class="float-right">
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success "><i class="fa fa-edit "></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-info btn"><i class="fa fa-list-alt"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn"><i class="fa fa-trash"></i></a>

                            </div>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Oops, No Students to display!</p>
        }
              

    </div>
</div>



