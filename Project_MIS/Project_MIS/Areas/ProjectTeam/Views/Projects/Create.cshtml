@model Project_MIS.Models.Project

@{
    ViewData["Title"] = "Create";
}

<br/><br/>

<div class="card">
    <div class="card-body bg-white">

        <div class="col text-info">
            <h1>Add New Project</h1><hr/>
        </div>
        <br />
        @* past the form *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="LecturerId" class="control-label"></label>
                <select asp-for="LecturerId" class="form-control" asp-items="ViewBag.LecturerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectState" class="control-label"></label>
                <select asp-for="ProjectState" asp-items="Html.GetEnumSelectList<ProjectState>()" class="form-control"></select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
    <a asp-action="Index"><span class="fa fa-arrow-alt-circle-left"> &nbsp;</span> Back to List</a>
</div>
 


@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


