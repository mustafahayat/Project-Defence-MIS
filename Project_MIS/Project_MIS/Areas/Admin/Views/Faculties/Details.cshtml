@model Project_MIS.Models.Faculty

@{
    ViewData["Title"] = "Details";
}


<br/><br/>

     <div class="card">
         <div class="card-body bg-white">

             <div class="col text-info">
                 <h1>Details of @Model.Name Faculty</h1><hr/>
             </div>
             <br />
             @* past the form *@

             
             <div class="form-group">
                 <label asp-for="Name" class="control-label"></label>
                 <input readonly="readonly" asp-for="Name" class="form-control" />

             </div>
             <div class="form-group">
                 <label asp-for="Description" class="control-label"></label><br />
                 <div class="border p-1 ">
                     @Html.Raw(Model.Description)
                 </div>

             </div>
             
             <div class="form-group">
                 <label asp-for="UniversityId" class="control-label"></label>
                 <select class="form-control custom-select" disabled="disabled" asp-for="UniversityId" asp-items="ViewBag.University"></select>
                 <span asp-validation-for="UniversityId" class="text-danger"></span>
             </div>


             <a asp-action="Index" class="btn btn-info"><span class="fa fa-arrow-alt-circle-left o"> &nbsp;</span>
                 Back to List</a> | 
             <a asp-action="Index" class="btn btn-success"><span class="fa fa-edit "> &nbsp;</span> Edit</a>

         </div>
         
     </div>
 


@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}