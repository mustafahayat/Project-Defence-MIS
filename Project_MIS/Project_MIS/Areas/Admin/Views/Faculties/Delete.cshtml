@model Project_MIS.Models.Faculty

@{
    ViewData["Title"] = "Delete";
}


<div>




    <br /><br />

    <div class="card">
        <div class="card-body bg-white">

            <div class="col text-danger">
                <h3>Are you sure you want to delete @Model.Name Faculty?</h3>

            </div> <hr />
            <br />
            @* past the form *@

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input readonly="readonly" asp-for="Name" class="form-control" />

            </div>
            
            <div class="form-group">
                <label asp-for="UniversityId" class="control-label"></label>
                <select disabled="disabled" asp-for="UniversityId" class="custom-select form-control" asp-items="ViewBag.University"></select>
                <span asp-validation-for="UniversityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label><br />
                <div class="border p-1 ">
                    @Html.Raw(Model.Description)
                </div>


            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>

        </div>
    </div>

</div>
