@model Project_MIS.Models.Department

@{
    ViewData["Title"] = "Details";
}



<br />
<br />

<div class="card">
    <div class="card-body bg-white">

        <div class="col text-info">
            <h1>Details of  @Model.Name Department</h1>
            <hr />
        </div>
        <br />
        @* past the form *@

        <div class="form-group ">
            <label asp-for="FacultyId" class="control-label"></label>
            <input readonly="readonly" asp-for="Faculty.Name" class="form-control" />
        </div>


        <div class="form-group ">
            <label asp-for="Name" class="control-label"></label>
            <input readonly="readonly" asp-for="Name" class="form-control" />
        </div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success"><span class="fa fa-edit"></span> Edit</a> |
        <a asp-action="Index"><span class="btn btn-info "><span class="fa fa-arrow-alt-circle-left"></span> &nbsp; Back to List</span> </a>
    </div>
    
</div>
