@model IEnumerable<Project_MIS.Models.Lecturer>

@{
    ViewData["Title"] = "Index";
}


<br />
<br />
<div class="card bg-white">
    <div class="card-body bg-white">
        <div class="row align-baseline">
            <div class="col text-info">
                <h1>List of Lecturers</h1><hr/>
            </div>
            <div class="col text-right">
                <a asp-action="Create" class="btn btn-success"> <span class="fa fa-plus"></span>  &nbsp; New Lecturer</a>
            </div>
        </div>


        <div>
            @if (Model.Any())
            {

                @* past the table Data *@

                <table class="table table-hover">
                    <thead >
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Department)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department.Name)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <img src="@item.Image" width="50px" height="50px" class="rounded-circle" />
                            </td>

                            <td class="float-right">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success "><i class="fa fa-edit "></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-info btn"><i class="fa fa-list-alt"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn"><i class="fa fa-trash"></i></a>

                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

                
            }
            else
            {
                <p>Oops, No record to display!</p>
            }

        </div>
    </div>
</div>
